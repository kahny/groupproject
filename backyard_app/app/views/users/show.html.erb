<%= render partial: "site/nav", locals: { user: @user }  %>

<div class="row">
  <div class="col-md-6">
  <img src="<%= @user.image_url %>">
     <p><%= @user.location %></p>
  </div>

  <div class="col-md-6">
    <!-- individual user page -->
   <h1>Hello, <%= @user.first_name %> <%= @user.last_name %> !</h1>

  <h1>You have <%= @owners_agreements.length %> pending rentals</h1>

  <% @owners_agreements.each do |agreement| %>
    <% agreementid = agreement.rental_id %>
    <% rental = Rental.find_by_id(agreementid)%>

    <% renterid = agreement.user_id %>
    <% user = User.find_by_id(renterid) %>

    <p>This is the rental: <%= rental.title %></p>
    <p>This is the user name: <%= user.first_name %></p>
    <p>This is the user url: <a href="/users/<%= renterid %>"><%= user.first_name %> </a></p>
  <% end %>




  </div>


</div>

<div class ="row">
  <div class="col-md-8">
  <h2>Add a review</h2>
      <form action = "/users/<%= @user.id %>/reviews" method="post">
        <div class= "form-group">
          <!-- hidden input to get current user id  -->
          <input type="hidden" value="<%= @user.id %>" name="review[user_id]">

          <label>Rating (1-5):</label>
          <input type="range" min="1" max="5" step="1" value="1" name = "review[rating]" autofocus/>

          <label>Add a review:</label>
          <textarea rows="5" cols="100" name="review[description]" placeholder="Leave a review"></textarea>

          <%= token_tag form_authenticity_token %>
          <input type="submit" value: "Add Review", class="btn btn-danger">
        </div>
      </form>
    </div>

  <div class="col-md-8">
    <p><%= @user.first_name %> <%= @user.last_name %> has <%= @user.reviews.length %> reviews</p>
    <% if @user.reviews.length > 0 %>
      <% @user.reviews.each do |r|%>
        <% if r.rating != nil %>
          <h3>Rating: <%= r.rating %> </h3>
          <h3>Review: <%= r.description %></h3>
        <% end %>
      <% end %>
    <% end %>


  </div>

  <%= @reviews.each do |review| %>
     <h3><%= review.description %></h3>
     <p><%= review.rating %></p>
     <% end %>

  </div>
  </div>
