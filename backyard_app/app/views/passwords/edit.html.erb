<div class="col-xs-12 col-sm-4 col-sm-offset-4">
  <h2>Reset your password</h2>

  <form action="/password/<%= @user.code %>" method="post">
    <div class="form-group">
      <label for="password[password]">New password: </label>
      <input type="password" name="password[password]", class="form-control" autofocus>
    </div>

    <div class="form-group">
      <label for="password[password_confirmation]">Confirm password: </label>
      <input type="password" name="password[password_confirmation]", class="form-control">
    </div>

    <%= token_tag form_authenticity_token %>

    <input type="submit" value: "Reset Password", class="btn btn-danger">
  </form>
</div>

