<h1>Passwords#new</h1>
<p>Find me in app/views/passwords/new.html.erb</p>

<div class="row">
	<div class="col-xs-12 col-sm-4 col-sm-offset-4">
	<h2>Enter your email to reset your password</h2>
	<div class="form-group">
		<%= form_tag passwords_path do %>
			<%= text_field_tag :email, nil, placeholder: "Enter your email" %>
	</div>
	<!-- separated button into another form-group for spacing -->
	<div class="form-group">
		<%= submit_tag "Reset Password", class: "form-control btn btn-danger"%>
		<% end %>
	</div>
	</div>
</div>