<%= render partial: "site/nav", locals: { user: @user } %>

 <div class="row">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">

    <h1>Sign-up</h1>

    <!-- Validation error messages -->
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <% @user.errors.full_messages.each do |msg| %>
              <p><%= msg %></p>
            <% end %>
          </div>
        <% end %>

    <!-- new user form -->
    <%= form_for @user do |f| %>
  		<div class="form-group">
	  		<%= f.label :first_name %>
	  		<%= f.text_field :first_name, class: "form-control", :autofocus => true %>

  		</div>

  		<div class="form-group">
	  		<%= f.label :last_name %>
	  		<%= f.text_field :last_name, class: "form-control" %>

  		</div>

  		<div class="form-group">
	  		<%= f.label :email %>
	  		<%= f.email_field :email, class: "form-control" %>
  		</div>

  		<div class="form-group">
	  		<%= f.label :password %>
	  		<%= f.password_field :password, class: "form-control" %>
  		</div>

  		<div class="form-group">
	  		<%= f.label :image_url %>
	  		<%= f.text_field :image_url, class: "form-control" %>
  		</div>

  		<div class="form-group">
	  		<%= f.submit "Create User", class: "form-control btn btn-danger" %>
  		</div>
  	<% end %>

  </div>
</div>